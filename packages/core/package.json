{
  "name": "@nodebus/core",
  "version": "0.0.2",
  "description": "Core Impl for nodebus",
  "author": "Muhammad Arslan <arslan@carbonteq.com>",
  "license": "GPL-3.0",
  "private": true,
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "exports": {
    "node": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs",
      "types": "./lib/index.d.ts"
    },
    "default": "./lib/index.js"
  },
  "files": [
    "/lib",
    "/src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/carbonteq/nodebus"
  },
  "bugs": {
    "url": "https://github.com/carbonteq/nodebus/issues"
  },
  "sideEffects": false,
  "scripts": {
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "lint:fix": "eslint \"{src,tests}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest --verbose",
    "tc": "tsc --pretty --noEmit --project tsconfig.build.json",
    "prebuild": "rimraf lib",
    "build": "rollup -c rollup.config.ts --configPlugin swc3",
    "postbuild": "tsc --emitDeclarationOnly --declaration --declarationMap --project tsconfig.build.json",
    "dev": "rollup -c rollup.config.ts -w --configPlugin swc3"
  },
  "devDependencies": {
    "@swc/core": "^1.2.241",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.7.8",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.1",
    "rollup-plugin-swc3": "^0.3.0",
    "tsconfig": "*",
    "typescript": "^4.7.4"
  }
}
