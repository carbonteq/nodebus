{
  "name": "nodebus",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "shared/eslint-config-nodebus",
      "shared/tsconfig"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "tc": "turbo run tc",
    "release": "turbo run build && changeset publish",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "turbo": "latest",
    "zx": "^7.0.8"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@3.2.3"
}
