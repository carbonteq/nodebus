{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "lib/**"]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tests/**/*.ts"],
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tests/**/*.ts"],
      "cache": false
    },
    "tc": {
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "tests/**/*.ts",
        "tsconfig.json"
      ]
    }
  }
}
